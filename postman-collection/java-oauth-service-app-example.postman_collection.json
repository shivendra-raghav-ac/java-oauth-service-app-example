{
	"info": {
		"_postman_id": "d804c9c4-bddd-48ca-a0ac-295e61a5d5dc",
		"name": "java-oauth-service-app-example",
		"description": "POC Spring Boot API using Okta M2M (private_key_jwt): health, get user by id, list users, update endpoints.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "4118111"
	},
	"item": [
		{
			"name": "Health",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/healthy",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"healthy"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get User by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{xApiKey}}",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{baseUrl}}/users/{{userId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"users",
						"{{userId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "List Users (optional limit/after)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{xApiKey}}",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{baseUrl}}/users?limit={{limit}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"users"
					],
					"query": [
						{
							"key": "limit",
							"value": "{{limit}}"
						},
						{
							"key": "after",
							"value": "{{after}}",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Update User (first/last name)",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-Key",
						"value": "{{xApiKey}}",
						"disabled": true
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/users/{{userId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"users",
						"{{userId}}"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080"
		},
		{
			"key": "userId",
			"value": "00uXXXXXXXXXXXXXXX"
		},
		{
			"key": "xApiKey",
			"value": "change-me"
		},
		{
			"key": "limit",
			"value": "20"
		},
		{
			"key": "after",
			"value": ""
		}
	]
}